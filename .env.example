# Environment Variables for Sudrashan
# Copy this file to .env and replace with your actual values

# Twitter API
TWITTER_BEARER_TOKEN=your-twitter-bearer-token-here
TWITTER_ACCESS_TOKEN=your-twitter-access-token-here
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret-here
TWITTER_API_KEY=your-twitter-api-key-here

# OpenAI API
OPENAI_API_KEY=your-openai-api-key-here

# Google APIs
GEMINI_API_KEY=your-gemini-api-key-here
GOOGLE_PROJECT_ID=your-google-project-id-here
GOOGLE_PROJECT_NUMBER=your-google-project-number-here
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key-here

# Perplexity API
PERPLEXITY_API_KEY=your-perplexity-api-key-here

# Groq API
GROQ_API_KEY=your-groq-api-key-here

# News API
NEWS_API_KEY=your-news-api-key-here

# N8N Configuration
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/your-webhook-id
N8N_API_KEY=your-n8n-api-key-here

# Database (Optional)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sudrashan_db
DB_USER=postgres
DB_PASSWORD=your-db-password-here